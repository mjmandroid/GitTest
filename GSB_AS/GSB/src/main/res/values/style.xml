<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal"></style>
    <!-- 主界面底部菜单栏菜单样式 -->
    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>
    <!-- ProgressBar popWindow -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/progressbar_show</item>
        <item name="android:windowExitAnimation">@anim/progressbar_miss</item>
    </style>

</resources>
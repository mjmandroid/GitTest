<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="325dp"
              android:background="#f3f3f3"
              android:orientation="vertical"
              android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="7dp"
        android:background="@drawable/shape_corner_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_pwd_headimg"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:adjustViewBounds="true"
            android:background="@drawable/head_bg_shape"
            android:padding="1dp"
            android:src="@drawable/head_round"/>

        <com.gaoshoubang.widget.MobileNumberEditText
            android:id="@+id/login_pwd_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:enabled="false"
            android:textColor="#333333"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/shape_corner_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="11dp">

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="您已注册,请输入密码登录"
            android:inputType="textPassword"
            android:textColor="#191919"
            android:textColorHint="#999999"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/login_pwd_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_login_pwd_see"
            android:button="@null"
            android:checked="false"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_btn_nor"
        android:enabled="false"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/login_pwd_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:text="忘记密码?"
        android:textColor="#4c90f6"
        android:textSize="13sp"/>

</LinearLayout>
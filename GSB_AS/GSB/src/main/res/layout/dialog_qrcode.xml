<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#cc000000"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="242dp"
        android:layout_height="362dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qr_close"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:background="@drawable/share_qrcode_close"/>

        <RelativeLayout
            android:id="@+id/qr_relative"
            android:layout_width="242dp"
            android:layout_height="270dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/share_qrcode_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/qr_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:text="长按二维码领取理财金"
                    android:textColor="#333333"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/share_qrcode_bg_1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/qr_img"
                        android:layout_width="117dp"
                        android:layout_height="117dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/qr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:textColor="#333333"
                    android:text="扫一扫"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/qr_save"
            android:layout_width="242dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="保存图片发朋友"
            android:textColor="#ffffff"
            android:textSize="13sp"/>
    </LinearLayout>

</LinearLayout>
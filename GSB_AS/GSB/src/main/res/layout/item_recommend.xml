<?xml version="1.0" encoding="utf-8"?>
<com.gaoshoubang.widget.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rm_img"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/recommend_item_default"/>

                <TextView
                    android:id="@+id/rm_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rm_img"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/rm_nums"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_margin="14dp"
                android:background="@drawable/shape_rm_nums"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="10sp"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:id="@+id/rm_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#dddddd"/>
    </LinearLayout>

</com.gaoshoubang.widget.MaterialRippleLayout>
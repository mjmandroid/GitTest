<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f3f3f3"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.gaoshoubang.widget.CommonTitleBar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:text="交易记录"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f9f9f9">

        <com.gaoshoubang.widget.NavigationTabStrip
            android:id="@+id/record_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:nts_active_color="#de4746"
            app:nts_color="#de4746"
            app:nts_corners_radius="0dp"
            app:nts_inactive_color="#000000"
            app:nts_size="15sp"
            app:nts_weight="3dp"/>
    </FrameLayout>

    <View style="@style/line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/record_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
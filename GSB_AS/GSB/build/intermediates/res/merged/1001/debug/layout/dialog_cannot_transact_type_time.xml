<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/text_size_15"
        android:paddingRight="@dimen/text_size_15"
        android:src="@drawable/close"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/iv_to_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="了解详情>>"
        android:textSize="@dimen/text_size_18"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/btn_touzidingyingjin" />

    <ImageView
        android:id="@+id/iv_dredge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:paddingLeft="@dimen/text_size_15"
        android:paddingRight="@dimen/text_size_15"
        android:src="@drawable/buttonkt"
        android:visibility="visible" />

</FrameLayout>
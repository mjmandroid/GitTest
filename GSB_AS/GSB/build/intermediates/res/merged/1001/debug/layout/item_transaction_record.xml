<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="152dp"
              android:background="#eeeff0"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/record_date"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="23dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="1/10"
            android:textColor="#a0a0a0"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/record_line_top"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#bfbfbf"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_item_record_round"/>

            <View
                android:id="@+id/record_line_bottom"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#bfbfbf"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:background="@drawable/shape_corner_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_rm_bg2"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="投资"
            android:textColor="#000"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="金额"
                android:textColor="#a0a0a0"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/record_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#4cd964"
                android:textSize="14sp"/>
        </LinearLayout>

        <View style="@style/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="闲置金额"
                android:textColor="#a0a0a0"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/record_free_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#000"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f3f3f3"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.gaoshoubang.widget.CommonTitleBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:text="性别设置"
        android:textColor="#333333"
        android:textSize="16sp"
        app:isShowLeftText="true"
        app:leftText="修改资料"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="7dp"
        android:background="@drawable/shape_corner_bg"
        android:orientation="horizontal"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/gengder_man"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_selector">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="72dp"
                    android:background="@drawable/icon_mascot_man"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="男"
                    android:textColor="#929292"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/gengder_man_s"
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/set_gender_icon"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dadada"/>

        <RelativeLayout
            android:id="@+id/gengder_woman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_selector">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="72dp"
                    android:background="@drawable/icon_mascot_woman"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="女"
                    android:textColor="#929292"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/gengder_woman_s"
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/set_gender_icon"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
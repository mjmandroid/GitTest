<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.gaoshoubang.widget.MaterialRippleLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mrl_rippleInAdapter="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/title_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                >

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/product_title_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/product_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/product_title"
                    android:background="@drawable/shape_tag_bg_1"
                    android:textColor="#4076d0"
                    android:textSize="10sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/product_title_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/product_title"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/product_title_tag1"
                    android:background="@drawable/shape_tag_bg_1"
                    android:textColor="#4076d0"
                    android:textSize="10sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/product_title_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/product_title"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="38dp"
                    android:layout_toRightOf="@id/product_title_tag2"
                    android:background="@drawable/shape_tag_bg_1"
                    android:gravity="center"
                    android:textColor="#4076d0"
                    android:textSize="10sp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/desc_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="18dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/product_intstRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="#de4746"
                            android:textSize="24sp"/>

                        <TextView
                            android:id="@+id/product_intstRate_per2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:text="%"
                            android:textColor="#de4746"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/product_intstRate_per"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:text="%"
                            android:textColor="#de4746"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:text="约定年化利率"
                        android:textColor="#8f8f8f"
                        android:textSize="12sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    >


                    <TextView
                        android:id="@+id/product_term_desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="产品期限"
                        android:textColor="#8f8f8f"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/product_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/product_term_desc_tv"
                        android:text=" "
                        android:layout_marginBottom="8dp"
                        android:textColor="#000"
                        android:textSize="18sp"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/product_remainAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="13sp"/>


                    <TextView
                        android:id="@+id/product_remainAmt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8f8f8f"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider_line"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#D1D1D1"
                />
        </LinearLayout>
    </com.gaoshoubang.widget.MaterialRippleLayout>


</LinearLayout>
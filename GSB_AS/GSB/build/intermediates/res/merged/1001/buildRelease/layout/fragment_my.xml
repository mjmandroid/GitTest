<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeff0"
                android:orientation="vertical">

    <com.andview.refreshview.XRefreshView
        android:id="@+id/my_xrefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.andview.refreshview.XScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_bg"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="225dp">

                    <ImageView
                        android:id="@+id/my_wave0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/my_wave1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/my_wave2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:paddingLeft="4dp"
                        android:paddingRight="7dp">

                        <ImageView
                            android:id="@+id/my_setting"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:src="@drawable/my_setting_prs"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/my_deposit"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shape_my_deposit"
                            android:gravity="center"
                            android:text="提现"
                            android:textColor="#fff"
                            android:textSize="13sp"/>

                        <Button
                            android:id="@+id/my_recharge"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_my_deposit"
                            android:gravity="center"
                            android:text="充值"
                            android:textColor="#fff"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/my_asset_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/my_assets_all_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="总资产(元)"
                                    android:textColor="#F4D3D3"
                                    android:textSize="14sp"/>

                                <ImageView
                                    android:id="@+id/imageView_hide_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/hide_money"
                                    />

                            </LinearLayout>


                            <!--todo invisible money-->

                            <TextView
                                android:id="@+id/my_allmoney"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="----"
                                android:textColor="#ffffff"
                                android:textSize="40sp"/>

                            <!--    <Button
                                    android:id="@+id/btn_nowlogin"
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/btn_me_loginstyle"
                                    android:gravity="center"
                                    android:text="立即登录"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:visibility="gone"/>-->
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="#FF867F"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/my_asset_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="闲置资金(元)"
                                    android:textColor="#7fffffff"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/my_has_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text="----"
                                    android:textColor="#ffffff"
                                    android:textSize="18sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_asset_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累计收益(元)"
                                    android:textColor="#7fffffff"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/my_give_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text="----"
                                    android:textColor="#ffffff"
                                    android:textSize="18sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/my_account_img"
                            android:layout_width="match_parent"
                            android:layout_height="107dp"
                            android:layout_margin="1dp"
                            android:clickable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/my_account_img"/>
                        <LinearLayout
                            android:background="@drawable/shape_corner_bg"
                            android:layout_below="@+id/my_account_img"
                            android:layout_marginTop="10dp"
                            android:id="@+id/my_opened_ly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:id="@+id/my_invest"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/my_invest_icon"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="我的投资"
                                    android:textColor="#333333"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/my_invest_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:text=""
                                    android:textColor="#999"
                                    android:textSize="13sp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:background="@drawable/find_arrow_gray"/>
                            </LinearLayout>

                            <View
                                style="@style/line"
                                android:layout_marginLeft="43dp"/>

                            <LinearLayout
                                android:id="@+id/my_calender"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/my_calender_icon"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="回款日历"
                                    android:textColor="#333333"
                                    android:textSize="14sp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:background="@drawable/find_arrow_gray"/>
                            </LinearLayout>

                            <View
                                style="@style/line"
                                android:layout_marginLeft="43dp"/>

                            <LinearLayout
                                android:id="@+id/my_record"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/my_record_icon"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="交易记录"
                                    android:textColor="#333333"
                                    android:textSize="14sp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:background="@drawable/find_arrow_gray"/>
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/shape_corner_bg"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <LinearLayout
                            android:id="@+id/my_hongbao"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/my_hongbao_icon"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="我的红包"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/my_hongbao_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="13sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/find_arrow_gray"/>
                        </LinearLayout>

                        <View
                            style="@style/line"
                            android:layout_marginLeft="43dp"/>

                        <LinearLayout
                            android:id="@+id/my_gaoshoubi"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/my_gaoshoubi_icon"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="我的高手币"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/my_gaoshoubi_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="13sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/find_arrow_gray"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/shape_corner_bg"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <LinearLayout
                            android:id="@+id/my_message"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/my_message_icon"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="我的消息"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/my_message_tag"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/shape_my_message_point"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#fff"
                                android:textSize="9sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/find_arrow_gray"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/shape_corner_bg"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <LinearLayout
                            android:id="@+id/my_about"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/my_aboutandhelp_icon"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="关于与帮助"
                                android:textColor="#333333"
                                android:textSize="14sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/find_arrow_gray"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </com.andview.refreshview.XScrollView>
    </com.andview.refreshview.XRefreshView>

    <ViewStub
        android:id="@+id/load_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:layout_marginTop="48dp"
        android:layout="@layout/view_error_net"
        android:visibility="gone"/>

    <include
        android:id="@+id/mask_login"
        layout="@layout/mask_layer_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.gaoshoubang.widget.RippleIntroView
        android:id="@+id/layout_ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone"
        >

    </com.gaoshoubang.widget.RippleIntroView>

</RelativeLayout>